{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"name": { "type": "string" },
		"version": { "type": "string" },
		"packages": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"setup": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"install": {
			"type": "string",
			"default": "apk add"
		},
		"update": {
			"type": "string",
			"default": "apk update"
		},
		"inherit": {
			"oneOf": [
				{
					"type": "object",
					"properties": {
						"docker": { "type": "string" }
					},
					"required": ["docker"],
					"additionalProperties": false
				},
				{
					"type": "object",
					"properties": {
						"github": {
							"type": "object",
							"properties": {
								"owner": { "type": "string" },
								"repository": { "type": "string" },
								"revision": { "type": "string" },
								"sha256": { "type": "string" }
							},
							"required": ["owner", "repository", "revision"],
							"additionalProperties": false
						}
					},
					"required": ["github"],
					"additionalProperties": false
				},
				{
					"type": "object",
					"properties": {
						"local": { "type": "string" }
					},
					"required": ["local"],
					"additionalProperties": false
				}
			]
		},
		"files": {
			"type": "object"
		},
		"project": {
			"type": "object",
			"properties": {
				"files": {
					"type": "object"
				},
				"commands": {
					"type": "object"
				}
			},
			"additionalProperties": false
		}
	},
	"required": ["name", "version", "inherit"],
	"additionalProperties": false
}
